// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  name     String
  address  String?
  photo    String?
}

model Book {
  id        String @id @default(uuid())
  title     String @unique
  author    String
  editorial String
  price     Float
  isbn      String @unique
}

model Product {
  id    String @id @default(uuid())
  name  String @unique
  code  String @unique
  price Float
}

model Store {
  id       String @id @default(uuid())
  name     String @unique
  amount   Int    @default(1)
  category String
}
